<!DOCTYPE html>
<html>
  <head>
    <title>EventScheduler10</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Barlow:300,400,700|Permanent+Marker&display=swap" rel="stylesheet">
  </head>

  <header>
    <nav>
      <ul class="navbar sticky">
        <% if logged_in? %>
          <p class="logo"><%= link_to "JAZ Events", current_user %></p>
        <% else %>
          <p class="logo"><%= link_to "JAZ Events", root_path %></p>
        <% end %>
        <% if current_user %>
          <li><%= link_to "Log Out", logout_path %></li>
          <li><%= link_to "Create Event", new_event_path %></li>
          <li>Logged in as <%= current_user.name.capitalize %></li> 
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
